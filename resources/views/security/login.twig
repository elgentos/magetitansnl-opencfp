{% extends "layouts/splash.twig" %}
{% block content %}
    <div class="opencfp-login">
        <a class="logo mb-4" href="{{ url('homepage') }}">
            {% include '_logo.twig' %}
        </a>

        <form method="post" action="{{ url('login_check') }}">
            <label for="email" class="text-sm text-white">Email</label>
            <input id="email" type="email" name="email" value="{% if email %}{{ email | escape }}{% endif %}"
                   placeholder="you@example.com">
            <label for="password" class="text-sm text-white">Password</label>
            <input id="password" type="password" name="password" placeholder="•••••••">
            <p class="my-4"><a href="{{ url('forgot_password') }}" class="text-white text-sm">Forgot your
                    password?</a></p>
            <button type="submit" class="btn btn-primary w-100">Login</button>
        </form>
        <br>
        {% if sso == 'on' %}
            <a href="{{ url('sso') }}">
                <button class="btn btn-secondary w-100">Login using OpenCFP Central</button>
            </a>
        {% endif %}
        <p class="text-center text-white my-4">New user? <a href="{{ url('user_new') }}"
                                                                    class="text-brand text-bold">Sign up Now</a></p>
    </div>
{% endblock %}
