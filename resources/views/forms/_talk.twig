<form action="{{ formAction }}" method="POST" class="form-horizontal">
    <input type="hidden" name="token" value="{{ csrf_token("speaker_talk") }}">
    <input type="hidden" name="token_id" value="speaker_talk">
    {% if id is defined %}
        <input name="id" type="hidden" value="{{ id }}">
    {% endif %}

    <div class="container">
        <div class="row">
            <div class="col-7">
                <div class="form-group">
                    <label for="form-talk-title">Talk Title <span class="text-danger">*</span></label>
                    <input id="form-talk-title" class="form-control" type="text" name="title" placeholder="Talk Title" value="{{ title }}" maxlength="100" required>
                </div>
                <div class="form-group">
                    <label for="form-talk-description">Description/Abstract <span class="text-danger">*</span></label>
                    <textarea id="form-talk-description" class="form-control" name="description" placeholder="Give a description of your talk (Abstract)" rows="10" required>{{ description }}</textarea>
                    <p class="text-note">Speaker abstract can be written using <a href="https://daringfireball.net/projects/markdown/basics" target="_blank" rel="noopener noreferrer">markdown</a> to support links</p>
                </div>
                <div class="form-group">
                    <label for="form-talk-other">Additional Talk Information</label>
                    <textarea id="form-talk-other" class="form-control" name="other" placeholder="Other Considerations, such as Joind.In, Lanyrd, local user group, etc." rows="10">{{ other }}</textarea>
                    <p class="text-note">Talk additional information can be written using <a href="https://daringfireball.net/projects/markdown/basics" target="_blank" rel="noopener noreferrer">markdown</a> to support links</p>
                </div>
            </div>
            <div class="col-md-5">
                <div class="form-group">
                    <label for="form-talk-slides">Slides</label>
                    <input id="form-talk-slides" class="form-control" type="text" name="slides" placeholder="Slides URL (if exists)" value="{{ slides }}">
                </div>
                <div class="form-group">
                    <label for="form-talk-type">Talk Type</label>
                    <select id="form-talk-type" class="form-control" name="type">
                        {% for typeKey, displayType in talkTypes %}
                            <option value="{{ typeKey }}" {% if type == typeKey %}selected {% endif %}>{{ displayType }}</option>
                        {% endfor %}
                    </select>
                </div>
                <div class="form-group">
                    <label for="form-talk-category">Talk Category</label>
                    <select id="form-talk-category" class="form-control" name="category">
                        {% for categoryKey, displayCategory in talkCategories %}
                            <option value="{{ categoryKey }}" {% if category == categoryKey %}selected {% endif %}>{{ displayCategory }}</option>
                        {% endfor %}
                    </select>
                </div>
                <div class="form-group">
                    <label for="form-talk-level">Talk Level</label>
                    <select id="form-talk-level" class="form-control" name="level">
                        {% for levelKey, displayLevel in talkLevels %}
                            <option value="{{ levelKey }}" {% if level == levelKey %}selected {% endif %}>{{ displayLevel }}</option>
                        {% endfor %}
                    </select>
                </div>
                <div class="form-check">
                    <input id="form-sponsor" class="form-check-input"name="sponsor" type="checkbox" value="1" {% if sponsor == '1' %}checked{% endif %}>
                    <label for="form-sponsor" class="form-check-label">Is your company sponsoring, or would they like to?</label><br>
                </div>
                <div class="form-check">
                    <input id="form-desired" class="form-check-input" name="desired" type="checkbox" value="1" {% if desired == '1' %}checked{% endif %}>
                    <label for="form-desired" class="form-check-label">Of your submissions, is this your best?</label>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12 mt-3">
            <button type="submit" class="btn btn-primary">{{ buttonInfo }}</button>
        </div>
    </div>
</form>
