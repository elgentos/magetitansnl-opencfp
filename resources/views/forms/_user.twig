<form action="{{ formAction }}" method="POST" enctype="multipart/form-data" class="form-horizontal" role="form">
    {% if id is defined %}
        <input name="id" type="hidden" value="{{ id }}">
    {% endif %}

    <div class="container">
        <div class="row">
            <div class="col-md-6 mb-4">
                <div class="form-group">
                    <label for="form-user-email">Email <span class="text-danger">*</span></label>
                    <input id="form-user-email" class="form-control" type="email" name="email" placeholder="you@example.com" value="{{ email | default('') }}" required>
                </div>
                <div class="form-group">
                    <label for="form-user-first-name">First Name <span class="text-danger">*</span></label>
                    <input id="form-user-first-name" class="form-control" type="text" name="first_name" placeholder="First Name" value="{{ first_name | default('') }}" required>
                </div>
                <div class="form-group">
                    <label for="form-user-last-name">Last Name <span class="text-danger">*</span></label>
                    <input id="form-user-last-name" class="form-control" type="text" name="last_name" placeholder="Last Name" value="{{ last_name | default('') }}" required>
                </div>
                <div class="form-group">
                    <label for="form-user-company">Company</label>
                    <input id="form-user-company" class="form-control" type="text" name="company" placeholder="Company" value="{{ company | default('') }}">
                </div>
                <div class="form-group">
                    <label for="form-user-twitter">Twitter</label>
                    <div class="input-group mb-2">
                        <div class="input-group-prepend">
                            <div class="input-group-text">@</div>
                        </div>
                        <input id="form-user-twitter" class="form-control" type="text" name="twitter" placeholder="@twitter" value="{{ twitter | default('') }}">
                    </div>
                </div>
                <div class="form-group">
                    <label for="form-user-joindin-username">joind.in username</label>
                    <input id="form-user-joindin-username" class="form-control" type="text" name="joindin_username" placeholder="first_lastname" value="{{ joindin_username | default('') }}">
                </div>
                <div class="form-group">
                    <label for="form-user-url">URL</label>
                    <input id="form-user-url" class="form-control" type="text" name="url" placeholder="https://example.com" value="{{ url | default('') }}">
                </div>
                {% if site.online_conference == false %}
                    <h3 class="text-base text-dark-soft mt-4">Travel Assistance</h3>
                    <div class="form-check">
                        <input id="form-transportation" class="form-check-input" name="transportation" type="checkbox" value="1" {% if transportation == '1' %}checked{% endif %}>
                        <label for="form-transportation" class="form-check-label">I need help with flight cost</label>
                    </div>
                    <div class="form-check">
                        <input id="form-hotel" class="form-check-input" name="hotel" type="checkbox" value="1" {% if hotel == '1' %}checked{% endif %}>
                        <label for="form-hotel" class="form-check-label">I need help with hotel cost</label>
                    </div>
                {% endif %}
            </div>
            <div class="col-md-6 mb-4">
                <div class="form-group">
                    <label for="form-user-bio">Speaker Bio</label>
                    <textarea id="form-user-bio" class="form-control" name="speaker_bio" placeholder="Tell us about yourself ..." rows="5">{{ speaker_bio | default('') }}</textarea>
                    <p class="text-note">Speaker bio can be written using <a href="https://daringfireball.net/projects/markdown/basics" target="_blank" class="text-underline" rel="noopener noreferrer">markdown</a> to support links</p>
                </div>

                {% if site.online_conference == false %}
                <div class="form-group">
                    <label for="form-user-airport">Departing Airport Code</label>
                    <input id="form-user-airport" class="form-control" type="text" name="airport" placeholder="3 Characters" value="{{ airport | default('') }}">
                </div>
                {% endif %}

                <div class="form-group">
                    <label for="form-user-notes">Additional Notes</label>
                    <textarea id="form-user-notes" class="form-control" name="speaker_info" placeholder="Any other information you feel the organizers should be aware of ..." rows="5">{{ speaker_info | default('') }}</textarea>
                    <p class="text-note">Speaker notes can be written using <a href="https://daringfireball.net/projects/markdown/basics" target="_blank" class="text-underline" rel="noopener noreferrer">markdown</a> to support links</p>
                </div>
                <div class="form-group">
                    <label for="form-user-photo" class="btn btn-brand cursor-pointer inline-block"><i class="fa fa-upload"></i><span class="ml-2">Upload Photo</span></label>
                    <input type="file" id="form-user-photo" name="speaker_photo" placeholder="Photo at least 300px wide by 300px high" accept="image/jpg, image/jpeg, image/png" class="form-control-file">
                    <p class="text-note">Photo should be square, and must be at least 300px wide by 300px high. JPG and PNG are the only accepted formats.</p>
                </div>
                {% if speaker_photo is defined and speaker_photo is not empty %}
                    <img src="{{ uploads(speaker_photo) }}" class="rounded-pill">
                {% endif %}

                {% if coc_link is defined and coc_link is not empty %}
                    <label for="form-agree-coc">Code of Conduct</label>
                    <input id="form-agree-coc" name="agree_coc" type="checkbox" value="agreed" > I agree to abide by the <a href="{{ coc_link }}" target="_blank" rel="noopener noreferrer">Code of conduct</a>.
                {% endif %}
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <button type="submit" class="btn btn-primary">{{ buttonInfo }}</button>
            </div>
        </div>
    </div>
</form>
